<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
    <% if can_edit? @event %>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    <% else %>
      <%= f.label :name %><i>(Name of closed event cannot be changed)</i><br />
      <%= f.text_field :name,:disabled => true %>
    <% end %>
      
  </div>

  <div class="field">
    <% if can_edit? @event %>
      <%= f.label :start_time %><br />
      <%= f.datetime_select :start_time %>
    <% else %>
      <%= f.label :start_time %><i>(Start time of closed event cannot be changed)</i><br />
      <%= f.datetime_select :start_time,:disabled => true %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :privacy_type %><br />
    <%= f.select :privacy_type,@privacy_type %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
